@page
@model BMOS.WebClient.Store.Pages.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="icon" type="image/x-icon" href="~/Images/BMOSLogo.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/LoginPagestyle.css" rel="stylesheet" />
    <link href="~/css/loadingstyle.css" rel="stylesheet" />
</head>
<body>

    <div class="login-container">
        <img src="~/Images/birds-background.jpg" class="login-image" />

        <form method="post" class="login-form" onsubmit="return LoginForm()">
            <h1 class="login-title">Login</h1>
            <div class="login-content">
                <span class="Errors text-danger text-center mb-3"></span>
                <div class="email--Box">
                    <div class="login-box">
                        <i class="fa-solid fa-user login-icon"></i>
                        <div class="login-boxInput">
                            <input type="text" class="login-input" id="login-email" placeholder=" " />
                            <label for="" class="login-label">Email</label>
                        </div>
                    </div>
                    <span id="EmailErrors" class="text-danger"></span>
                </div>

                <div class="password--Box">
                    <div class="login-box">
                        <i class="fa-solid fa-lock login-icon"></i>
                        <div class="login-boxInput">
                            <input type="password" class="login-input" id="login-pass" placeholder=" " />
                            <label for="" class="login-label">Password</label>
                            <i class="fa-solid fa-eye-slash login-eye" id="login-eye"></i>
                        </div>
                    </div>
                    <span id="PasswordErrors" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="login-button">Login</button>
        </form>
    </div>
    <div class="loading--part">
        <div class="loading--container">
            <div class="ring"></div>
            <div class="ring"></div>
            <div class="ring"></div>
            <span class="loading">Loading...</span>
        </div>
    </div>
    <script src="~/js/loginPage.js"></script>
    <script src="https://kit.fontawesome.com/62731e1e20.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

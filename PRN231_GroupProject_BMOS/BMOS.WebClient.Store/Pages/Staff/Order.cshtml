@page "{id?}"
@model BMOS.WebClient.Store.Pages.Staff.OrderModel
@{
    ViewData["Title"] = "Order Detail";
    ViewData["Page"] = "Orders";
    ViewData["Role"] = "Staff";
}
@section Styles{
    <link href="~/css/historyorderPageStyle.css" rel="stylesheet" />
    <link href="~/css/staffdashboardpagestyle.css" rel="stylesheet" />
}
<div class="tabular--wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 card customerInformation">
                    <div class="card-header">
                        <span>Customer Information</span>
                    </div>
                    <div class="card-body">
                        <div class="information">
                            <label>FullName</label>
                            <span id="fullName"></span>
                        </div>
                        <div class="information">
                            <label>Email</label>
                            <span id="email"></span>
                        </div>
                        <div class="information">
                            <label>Phone</label>
                            <span id="phone"></span>
                        </div>
                        <div class="information">
                            <label>Address</label>
                            <span id="address"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 card orderInformation">
                    <div class="card-header">
                        <span>Order Information</span>
                    </div>
                    <div class="card-body">
                        <div class="information">
                            <label>Order ID</label>
                            <span id="orderId"></span>
                        </div>
                        <div class="information">
                            <label>Ordered Date</label>
                            <span id="orderedDate"></span>
                        </div>
                        <div class="information">
                            <label>Total</label>
                            <span id="orderTotal"></span>
                        </div>

                        <div class="information">
                            <label>Order Status</label>
                            <span id="orderStatus"></span>
                            <div class="ActionButtons">
                                <button id="confirmButton"></button>
                                <button id="confirmCancel">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row card orderDetail">
                <div class="card-body">
                    <div>
                        <table class="table table-hover text-center">
                            <thead>
                                <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Meal Title</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="MealTable">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6"></div>
                <div class="col-lg-6 card orderTransactions">
                    <div class="card-header">
                        <span>Order Logs</span>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover text-center">
                            <thead>
                                <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Log Time</th>
                                    <th scope="col">Order Status</th>
                                </tr>
                            </thead>
                            <tbody class="orderLogsTable">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>
@section Scripts{
    <script src="~/js/Order.js"></script>
}

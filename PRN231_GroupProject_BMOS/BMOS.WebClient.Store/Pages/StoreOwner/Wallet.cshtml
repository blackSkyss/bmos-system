@page
@model BMOS.WebClient.Store.Pages.StoreOwner.WalletModel
@{
    ViewData["Title"] = "Wallet";
    ViewData["Page"] = "Wallet";
    ViewData["Role"] = "StoreOwner";
}
@section Styles{
    <link href="~/css/walletpageStyle.css" rel="stylesheet" />
}
<div class="tabular--wrapper">
    <div class="container">
    <div class="row card">
        <div class="card-header">
            <small>Total Balance</small><br />
            <span id="totalBalance"></span><br />
        </div>
        <div class="card-body">
                <div class="mb-3">
                    <h4 style="color: #708B77;">Wallet Transactions:</h4>
                </div>
                <div>
                    <table class="table table-hover text-center">
                        <thead>
                            <tr>
                                <th scope="col">No.</th>
                                <th scope="col">Recharge Time</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Content</th>
                                <th scope="col">Transaction Type</th>
                                <th scope="col">Recharge Status</th>
                            </tr>
                        </thead>
                        <tbody class="WalletTransactionsTable">
                        </tbody>
                    </table>
                </div>
                <div class="pagination">
           <div></div>
            <div class="numberPages">
                <ul>
                </ul>
            </div>
            <div class="numberOfBirdFoods">
                <label for="numberOfBirdFoods"><strong>Transactions:</strong></label>
                <select id="numberOfBirdFoods">
                    <option value="5">5</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
            </div>
        </div>
        </div>
    </div>
</div>
</div>
@section Scripts{
<script src="~/js/wallet.js"></script>
}
